<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/doc_operation_list"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_doc_operation_main"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="@dimen/dialog_content_font_size"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="@dimen/dialog_content_font_size"
            />
        <LinearLayout
            android:id="@+id/check_message_area"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp"
            android:paddingLeft="14dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/check_message_box"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="14dp"
                android:src="@mipmap/icon_check_box_checked"
                />
            <TextView
                android:id="@+id/check_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="同时关注该任务"
                android:textSize="@dimen/dialog_content_check_font_size"
                android:textColor="@color/doc88_gray_99"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/doc88_gray_cc"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dialog_btn_height"
            android:orientation="horizontal"
            >
            <TextView
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dialog_btn_font_size"
            android:text="想一想"
            android:textColor="@color/doc88_green"
            android:gravity="center"
            android:layout_gravity="center"
            />
            <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/doc88_gray_cc"/>
            <TextView
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dialog_btn_font_size"
            android:text="确定"
            android:textColor="@color/doc88_gray_99"
            android:gravity="center"
            android:layout_gravity="center"
            />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
